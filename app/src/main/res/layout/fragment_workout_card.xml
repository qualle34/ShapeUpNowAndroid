<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Theme.ShapeUp.Button"
    android:layout_width="200dp"
    android:layout_height="155dp"
    android:background="@drawable/background_round_corners"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_marginHorizontal="8dp"
    tools:context=".WorkoutCardFragment">

    <TextView
        android:id="@+id/workout_card_upper_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="6 June"
        android:textAppearance="@style/TextAppearance.ShapeUp.SecondaryLight" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/workout_card_middle_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="10 Excercises"
        android:textAppearance="@style/TextAppearance.ShapeUp.SecondaryMedium"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/workout_card_lower_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2 new achievements"
        android:textAppearance="@style/TextAppearance.ShapeUp.GrayLight"
        android:textSize="10sp" />
</LinearLayout>
