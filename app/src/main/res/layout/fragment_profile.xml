<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".ProfileFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:civ_border_color="@color/secondary"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/profile_name_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Антон, 22"
        android:textColor="@color/secondary"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_image" />

    <TextView
        android:id="@+id/profile_workout_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Количество тренировок: 20"
        android:textColor="@color/secondary"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_name_age" />

    <TableLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/background_round_corners_top"
        android:padding="16dp"
        android:paddingTop="24px"
        android:stretchColumns="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_workout_count">

        <TableRow android:layout_marginBottom="8dp">

            <TextView
                android:padding="3dip"
                android:text="Пол"
                android:textColor="@color/primary"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/profile_edit_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:ems="10"
                android:gravity="right"
                android:inputType="textPersonName"
                android:text="Name"
                android:textColor="@color/primary"
                android:textSize="12sp" />

        </TableRow>

        <TableRow android:layout_marginBottom="8dp">

            <TextView
                android:padding="3dip"
                android:text="Дата рождения"
                android:textColor="@color/primary"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/profile_edit_birthdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:ems="10"
                android:gravity="right"
                android:inputType="textPersonName"
                android:text="Name"
                android:textColor="@color/primary"
                android:textSize="12sp" />

        </TableRow>

        <TableRow android:layout_marginBottom="8dp">

            <TextView
                android:padding="3dip"
                android:text="Email"
                android:textColor="@color/primary"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/profile_edit_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:ems="10"
                android:gravity="right"
                android:inputType="textPersonName"
                android:text="Name"
                android:textColor="@color/primary"
                android:textSize="12sp" />

        </TableRow>

        <TableRow android:layout_marginBottom="8dp">

            <TextView
                android:padding="3dip"
                android:text="Рост"
                android:textColor="@color/primary"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/profile_edit_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:ems="10"
                android:gravity="right"
                android:inputType="textPersonName"
                android:text="Name"
                android:textColor="@color/primary"
                android:textSize="12sp" />

        </TableRow>

        <TableRow android:layout_marginBottom="8dp">

<!--            <androidx.fragment.app.FragmentContainerView-->
<!--                android:id="@+id/profile_weight_chart"-->
<!--                android:name="com.qualle.shapeup.ChartFragment"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content" />-->
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>