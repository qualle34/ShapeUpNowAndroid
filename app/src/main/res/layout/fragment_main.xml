<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context=".MainFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="14dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Your training achievements"
                android:textAppearance="@style/TextAppearance.ShapeUp.PrimaryBold" />

            <ImageView
                android:id="@+id/main_button_profile"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_profile" />

        </LinearLayout>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/main_chart_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="16dp"
            android:minHeight="200dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="14dp"
            android:text="Workouts"
            android:textAppearance="@style/TextAppearance.ShapeUp.PrimaryBold"
            android:textSize="24sp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="155dp"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/main_linear_layout_workout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:orientation="horizontal">

                </LinearLayout>

            </RelativeLayout>

        </HorizontalScrollView>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/main_radar_chart_container"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="14dp"
            android:text="Achievements"
            android:textAppearance="@style/TextAppearance.ShapeUp.PrimaryBold"
            android:textSize="24sp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <soup.neumorphism.NeumorphButton
                    android:id="@+id/main_button_achievements_test_1"
                    style="@style/Widget.Neumorph.Button"
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="6dp"
                    android:text="Bench press"
                    android:textAllCaps="false"
                    android:textColor="#001729"
                    android:textSize="16sp" />

                <soup.neumorphism.NeumorphButton
                    android:id="@+id/main_button_achievements_test_2"
                    style="@style/Widget.Neumorph.Button"
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="6dp"
                    android:text="Dead lift"
                    android:textAllCaps="false"
                    android:textColor="#001729"
                    android:textSize="16sp" />

                <soup.neumorphism.NeumorphButton
                    android:id="@+id/main_button_chart_menu"
                    style="@style/Widget.Neumorph.Button"
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="6dp"
                    android:text="All"
                    android:textAllCaps="false"
                    android:textColor="#001729"
                    android:textSize="16sp" />

            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>
</ScrollView>