<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context=".MainFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_weight="1">

            <TextView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Your training achievements"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#131313"
                android:textSize="30sp"
                android:textStyle="bold" />

            <soup.neumorphism.NeumorphImageButton
                android:id="@+id/main_button_profile"
                style="@style/Widget.Neumorph.ImageButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_profile"
                app:neumorph_shapeType="pressed" />

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:text="Workouts"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#131313"
            android:textSize="24sp"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <soup.neumorphism.NeumorphButton
                    android:id="@+id/main_button_workout_test_1"
                    style="@style/Widget.Neumorph.Button"
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="6dp"
                    android:text="6 june"
                    android:textAllCaps="false"
                    android:textColor="#001729"
                    android:textSize="16sp" />

                <soup.neumorphism.NeumorphButton
                    android:id="@+id/main_button_save_workout"
                    style="@style/Widget.Neumorph.Button"
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="6dp"
                    android:text="Add \n Workout"
                    android:textAllCaps="false"
                    android:textColor="#001729"
                    android:textSize="16sp" />

                <soup.neumorphism.NeumorphButton
                    android:id="@+id/main_button_all_workouts"
                    style="@style/Widget.Neumorph.Button"
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="6dp"
                    android:text="All "
                    android:textAllCaps="false"
                    android:textColor="#001729"
                    android:textSize="16sp" />

            </LinearLayout>

        </HorizontalScrollView>


        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/main_chart_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="150dp"
            android:layout_marginVertical="16dp"
            android:layout_marginHorizontal="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:text="Achievements"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#131313"
            android:textSize="24sp"
            android:textStyle="bold" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <soup.neumorphism.NeumorphButton
                    android:id="@+id/main_button_achievements_test_1"
                    style="@style/Widget.Neumorph.Button"
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="6dp"
                    android:text="Bench press"
                    android:textAllCaps="false"
                    android:textColor="#001729"
                    android:textSize="16sp" />

                <soup.neumorphism.NeumorphButton
                    android:id="@+id/main_button_achievements_test_2"
                    style="@style/Widget.Neumorph.Button"
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="6dp"
                    android:text="Dead lift"
                    android:textAllCaps="false"
                    android:textColor="#001729"
                    android:textSize="16sp" />

                <soup.neumorphism.NeumorphButton
                    android:id="@+id/main_button_chart_menu"
                    style="@style/Widget.Neumorph.Button"
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="6dp"
                    android:text="All"
                    android:textAllCaps="false"
                    android:textColor="#001729"
                    android:textSize="16sp" />

            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>
</ScrollView>