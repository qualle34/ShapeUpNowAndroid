<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context=".ui.SaveWorkoutFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/save_workout_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginBottom="10dp"
            android:text="Today"
            android:textAppearance="@style/TextAppearance.ShapeUp.PrimaryBold"
            android:textSize="27sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/save_workout_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:itemCount="3"
            tools:listitem="@layout/fragment_card_record" />

        <TextView
            android:id="@+id/save_workout_add_exercise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="Add Exercise"
            android:textAppearance="@style/TextAppearance.ShapeUp.PrimaryMedium"
            android:textSize="24sp" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>




